  @model IEnumerable<UserViewModels>

@{
    ViewData["Title"] = "Users";

}



<h1>All Users  </h1>

<partial name="_RoleForme" model="new RoleFormViewModel()" />


<table class="table tabel-striped  mt-4">
    <thead>
        <tr class="bg-primary  text-white">
            <th>First Name </th>
            <th>Last Name  </th>
            <th>User Name  </th>
            <th>Email  </th>
            <th>Roles  </th>
            <th>Actions </th>
          

        </tr>
    </thead>
    <tbody>

        @foreach (var user in Model)
        {
        <tr>
            <td> @user.FirstName </td>
            <td> @user.LastName </td>
            <td> @user.UserName </td>
            <td> @user.Email </td>
            <td> @string.Join(" , " ,user.Role.ToList() )</td>
            <td> </td>
            </tr>
        }

    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
